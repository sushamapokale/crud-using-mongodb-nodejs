<h3>{{viewTitle}}</h3>

<form action="/course" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{course._id}}">
    <div class="form-group">
        <label> Name</label>
        <input type="text" class="form-control" name="cname"  value="{{course.cname}}">
        
    </div>
    <div class="form-group">
        <label>ID</label>
        <input type="text" class="form-control" name="cid"  value="{{course.id}}">
       
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Duration</label>
            <input type="text" class="form-control" name="cduration"  value="{{course.cduration}}">
        </div>
        <div class="form-group col-md-6">
            <label>Fees</label>
            <input type="text" class="form-control" name="cname"  value="{{course.cfees}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Add</button>
        <a class="btn btn-secondary" href="/course/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>